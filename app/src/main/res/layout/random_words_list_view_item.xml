<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/wordsListViewItem"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/dark_gray" />

        <TextView
            android:id="@+id/wordNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="37dp"
            android:layout_alignTop="@+id/removeButtonImage"
            android:layout_alignBottom="@+id/removeButtonImage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="-3dp"
            android:layout_marginBottom="-1dp"
            android:fontFamily="@font/round_regular"
            android:gravity="center"
            android:text="@string/word"
            android:textColor="@color/text_white"
            android:textSize="25sp" />

        <ImageView
            android:id="@+id/removeButtonImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="13dp"
            android:background="@drawable/rounded_border_background"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingHorizontal="2dp"
            android:paddingVertical="2dp"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>
</LinearLayout>