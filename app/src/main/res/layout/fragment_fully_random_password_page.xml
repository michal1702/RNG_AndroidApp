<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorSecondary"
    tools:context=".fragments.FullyRandomPasswordPage">


    <TextView
        android:id="@+id/fullyRandomPasswordTextView"
        android:layout_width="269dp"
        android:layout_height="38dp"
        android:layout_marginTop="60dp"
        android:background="?colorPrimary"
        android:fontFamily="@font/round_regular"
        android:gravity="center"
        android:textColor="?colorOnSecondary"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/generateFullyRandomPasswordButton"
        app:layout_constraintStart_toStartOf="@+id/generateFullyRandomPasswordButton"
        app:layout_constraintTop_toBottomOf="@+id/generateFullyRandomPasswordButton" />

    <Button
        android:id="@+id/generateFullyRandomPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/round_regular"
        android:text="Generate"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/passwordCharactersCountSpinner"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/passwordCharactersCountSpinner" />

    <Spinner
        android:id="@+id/passwordCharactersCountSpinner"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="92dp"
        android:backgroundTint="?colorPrimary"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/round_regular"
        android:text="Characters count:"
        android:textColor="?colorOnSecondary"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/passwordCharactersCountSpinner"
        app:layout_constraintEnd_toStartOf="@+id/passwordCharactersCountSpinner"
        app:layout_constraintTop_toTopOf="@+id/passwordCharactersCountSpinner"
        app:layout_constraintVertical_bias="0.545" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/round_regular"
        android:text="Result:"
        android:textColor="?colorOnSecondary"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/fullyRandomPasswordTextView"
        app:layout_constraintStart_toStartOf="@+id/fullyRandomPasswordTextView" />
</androidx.constraintlayout.widget.ConstraintLayout>