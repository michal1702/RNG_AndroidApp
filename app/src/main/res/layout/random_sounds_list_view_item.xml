<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/soundsListViewItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/list_item_background" />

        <ImageView
            android:id="@+id/playButtonImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/removeButtonImage"
            android:layout_alignBottom="@+id/removeButtonImage"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="1dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/icons_rounded_borders_background"
            android:paddingVertical="5dp"
            android:paddingHorizontal="2dp"
            android:layout_toStartOf="@+id/removeButtonImage"
            android:src="@drawable/ic_play" />

        <ImageView
            android:id="@+id/removeButtonImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="14dp"
            android:background="@drawable/icons_rounded_borders_background"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingHorizontal="2dp"
            android:paddingVertical="2dp"
            android:src="@drawable/ic_delete" />

        <TextView
            android:id="@+id/soundName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/playButtonImage"
            android:layout_alignBottom="@+id/playButtonImage"
            android:layout_alignParentStart="true"
            android:layout_marginStart="13dp"
            android:layout_marginTop="-2dp"
            android:layout_marginBottom="-1dp"
            android:fontFamily="@font/round_regular"
            android:gravity="center"

            android:text="Sound no."
            android:textColor="@color/text_white"
            android:textSize="25sp" />
    </RelativeLayout>
</LinearLayout>
