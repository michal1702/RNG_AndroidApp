<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/soundsListViewItem"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/dark_gray" />

        <ImageView
            android:id="@+id/playButtonImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/removeButtonImage"
            android:layout_alignBottom="@+id/removeButtonImage"
            android:layout_marginTop="-1dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="1dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:background="@drawable/rounded_border_background"
            android:paddingVertical="5dp"
            android:paddingHorizontal="2dp"
            android:layout_toStartOf="@+id/removeButtonImage"
            android:src="@drawable/ic_play" />

        <ImageView
            android:id="@+id/removeButtonImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rounded_border_background"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingHorizontal="2dp"
            android:paddingVertical="2dp"
            android:src="@drawable/ic_delete" />

        <TextView
            android:id="@+id/soundName"
            android:layout_width="229dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/progressBarList"
            android:layout_alignBottom="@+id/progressBarList"
            android:layout_alignParentStart="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="-7dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="-8dp"
            android:layout_toStartOf="@+id/progressBarList"
            android:fontFamily="@font/round_regular"
            android:gravity="start"
            android:scrollbars="horizontal"
            android:text="@string/sound_no"
            android:textColor="@color/text_white"
            android:textSize="25sp" />

        <ProgressBar
            android:id="@+id/progressBarList"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/playButtonImage"
            android:layout_alignBottom="@+id/playButtonImage"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="11dp"
            android:layout_marginBottom="5dp"
            android:layout_toStartOf="@+id/playButtonImage"
            android:scaleY="1.5" />

    </RelativeLayout>
</LinearLayout>
